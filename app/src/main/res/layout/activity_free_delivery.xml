<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreeDeliveryActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_group_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/group"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        />


    <Spinner
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_group_free"
        />

    <TextView
        android:id="@+id/tv_students_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/student"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/sv1"
        android:layout_marginBottom="5dp"
        />

    <Spinner
        android:id="@+id/sv2"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_students_free"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/tv_discipline_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/discipline"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/sv2"
        android:layout_marginBottom="5dp"
        />


    <Spinner
        android:id="@+id/sv3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_discipline_free"
        />

    <TextView
        android:id="@+id/tv_lab_work_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/student"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/sv3"
        android:layout_marginBottom="5dp"
        />

    <Spinner
        android:id="@+id/sv4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_lab_work_free"
        />

    <Button
        android:id="@+id/deliveryBtnFree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delivery"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>